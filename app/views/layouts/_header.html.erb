<header class="navbar navbar-fixed-top navbar-right">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right header-list">
          <li><%= link_to "トップ", root_path, class: "header-list" %></li>
          <% if logged_in? %>
            <li><%= link_to "利用者一覧", '#', class: "header-list" %></li>
            <li><%= link_to "タスク作成", new_user_task_path(current_user), class: "header-list" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle dropdown-header" data-toggle="dropdown" id="dropdown-title">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="dropdown-header">ユーザー</li>
                <li><%= link_to "プロフィール", current_user %></li>
                <li><%= link_to "設定", edit_user_path(current_user)%></li>
                <li class="dropdown-header">タスク</li>
                <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path, class: "header-list" %></li>
          <% end %>
          
      </ul>
    </nav>
  </div>
</header>