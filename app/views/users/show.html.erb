<% provide(:title, @user.name) %>

<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-borderd" id="table-task">
      <tbody>
        <tr>
          <th class="active col-md-2"><%= User.human_attribute_name :id %></th>
          <td class="col-md-10"><%= @user.id%></td>
        </tr>
        <tr>
          <th class="active"><%= User.human_attribute_name :名前 %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th class="active"><%= User.human_attribute_name :メールアドレス %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th class="active"><%= User.human_attribute_name :作成日 %></th>
          <td><%= l(@user.created_at, format: :long) %></td>
      </tbody>
    </table>
  </div>    
</div>
